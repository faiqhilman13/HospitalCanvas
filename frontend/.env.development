# Development Environment Variables for AI-Powered Clinical Canvas Frontend
# This file is used during development (npm run dev)

# Local Backend API URL
VITE_API_URL=http://localhost:8000/api

# Development environment flag
VITE_NODE_ENV=development

# API Configuration
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=2
VITE_API_RETRY_DELAY=500

# Feature Flags
VITE_ENABLE_MOCK_DATA_FALLBACK=true
VITE_ENABLE_API_LOGGING=true
VITE_ENABLE_ERROR_REPORTING=false

# Debugging (enabled in development)
VITE_DEBUG_MODE=true
VITE_ENABLE_DEVTOOLS=true

# Cache Configuration (shorter TTL for development)
VITE_CACHE_PATIENT_DATA_TTL=60000
VITE_CACHE_PATIENTS_LIST_TTL=120000
VITE_CACHE_SOAP_NOTES_TTL=30000