# ==============================================
# Railway Environment Configuration Example
# Copy this file to .env and fill in your values
# ==============================================

# =============== SERVER CONFIG ===============
# Railway automatically sets PORT, but you can override locally
# PORT=8000

# =============== CORS ORIGINS ================
# Frontend URLs (comma-separated for multiple origins)
# Railway will automatically set RAILWAY_PUBLIC_DOMAIN
CORS_ORIGINS=https://your-frontend-domain.com,https://your-netlify-app.netlify.app
NETLIFY_URL=https://your-netlify-app.netlify.app

# =============== OPENAI INTEGRATION ==========
# Required for AI Q&A and SOAP note generation
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id-here
OPENAI_MODEL=gpt-4o-mini

# =============== DATABASE CONFIG =============
# For SQLite (development/demo)
DATABASE_URL=sqlite:///./data/clinical_canvas.db

# For PostgreSQL (production - Railway provides DATABASE_URL automatically)
# DATABASE_URL=postgresql://username:password@host:port/database_name
# POSTGRES_HOST=hostname
# POSTGRES_PORT=5432
# POSTGRES_DB=database_name
# POSTGRES_USER=username
# POSTGRES_PASSWORD=password

# =============== SECURITY ====================
# Secret key for session management (generate a random string)
SECRET_KEY=your-super-secret-key-change-this-in-production
SECURITY_KEY=your-security-key-for-encryption

# JWT Configuration (if using JWT tokens)
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# =============== FILE STORAGE ================
# Local storage (default)
UPLOAD_DIR=./data/documents
MAX_FILE_SIZE_MB=10

# Cloud storage (optional - for production file uploads)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name

# =============== AI PIPELINE =================
# RAG (Retrieval-Augmented Generation) Configuration
EMBEDDINGS_MODEL=BAAI/bge-large-en-v1.5
VECTOR_DB_PATH=./data/vector_store
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Ollama Configuration (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2:7b-chat

# =============== LOGGING & MONITORING ========
LOG_LEVEL=INFO
LOG_FORMAT=json

# Application Performance Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn-here
# NEW_RELIC_LICENSE_KEY=your-newrelic-key

# =============== ENVIRONMENT =================
ENVIRONMENT=production
DEBUG=false

# =============== RAILWAY SPECIFIC ============
# These are automatically set by Railway
# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=clinical-canvas-backend
# RAILWAY_PROJECT_NAME=clinical-canvas
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app

# =============== FEATURE FLAGS ===============
# Enable/disable features
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_OCR_PROCESSING=true
ENABLE_SOAP_GENERATION=true
ENABLE_POPULATION_ANALYTICS=true

# =============== RATE LIMITING ===============
# API rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============== HEALTH CHECKS ===============
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10